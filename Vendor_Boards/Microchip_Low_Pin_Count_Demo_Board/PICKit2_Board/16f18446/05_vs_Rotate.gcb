  #Chip 16F18446
 #config MCLRE_OFF

  #Define  ADC_Fudge 0x0739   ' as found by A2D example

  dir portc out
  portc = 0
  portc.3 = 1

  do

    wait Scale( ReadAD12 ( AN0 ), 0, ADC_Fudge, 100, 1000) ms
    Set C off
    Rotate portc right
    if C = 1 then portc.3 = 1

  loop

End
