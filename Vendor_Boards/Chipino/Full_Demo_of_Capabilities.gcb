'Chip model
#CHIP 16F1938, 32
'

#DEFINE SoundOut PORTc.2
Dim timedelay1 As Word
Dir b0 In
Dir b1 In


On Interrupt  PORTBChange Call InterruptHandler
IOCBN0 = 1
IOCBN1 = 1
IOCBP0 = 1
IOCBP1 = 1

Repeat 4
    Tone 110, 10
    Wait 10 ms
End Repeat

#DEFINE PWM_Out1 PORTB.5
#DEFINE PWM_Out2 PORTB.4
#DEFINE PWM_Out3 PORTB.3
#DEFINE PWM_Out4 PORTB.2

Dir porta.0 In
Dir porta.1 In



'Main routine
Start:

'Turn one LED on, then off, then the next LED...

PWMOut 1, ReadAD10(AN1), readADC
PWMOut 2, ReadAD10(AN1), readADC
PWMOut 3, ReadAD10(AN1), readADC
PWMOut 4, ReadAD10(AN1), readADC



Goto Start

Function readADC
    readADC = ReadAD( AN0 )
    If readADC < 1 Then
        readADC = 1
    End If

End Function

Sub InterruptHandler
    IntOff

    If IOCBF0 = 1 Then
        Tone 220, 5
        IOCBF = IOCBF AND 254
    End If

    If IOCBF1 = 1 Then
        Tone 880, 5
        IOCBF = IOCBF AND 253
    End If
    'RBIF = 0
    IntOn

End Sub
